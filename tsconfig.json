{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "jsx": "react-jsx",
    "lib": [
      "es2018",
      "dom"
    ],
    "plugins": [
      {
        "transform": "@formatjs/ts-transformer",
        "import": "transform",
        "type": "config",
        "overrideIdFn": "[sha512:contenthash:base64:6]",
        "ast": true
      }
    ],
    "types": [
      "node",
      "lodash"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "TypeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "./src/**/*"
  ],
  "lib": [
    "es2018",
    "dom",
    "es6"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "dist",
    "blueprint-templates"
  ]
}
